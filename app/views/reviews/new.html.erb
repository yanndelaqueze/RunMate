<div class="container p3">
  <%= simple_form_for [@attendance, @review] do |f| %>
    <%= f.input :comment, placeholder: "Leave your comment for the run", label: "How was the Run ?" %>
    <%= f.input :rating, collection: (1..5).to_a, label: "Rate your experience", input_html: {data: {controller: "star-rating"}} %>
    <%= f.submit class: "btn btn-outline-primary" %>
  <% end %>
</div>
