<div class="dashboard-body">
  <div class="container mt-5 mb-4">
      <%= link_to :back, class:"text-decoration-none" do %>
        <span><i class="fa-solid fa-circle-arrow-left fs-6 btn-back-white me-1"></i>BACK</span>
      <% end %>
      <h1 class="title-dashboard my-3 text-center">RUNS YOU CREATED</h1>

    <%# Cards of runs created %>
    <div class="runs-created">
      <% @runs.each do |run| %>
        <% if run.user == current_user %>
          <%= render "runs/card_run", run: run %>
        <% end %>
      <% end %>
    </div>

    <%# Cards with requests made from others %>
    <% @pending_attendances.each do |attendance| %>
      <% if attendance.status == "pending" %>
        <%= render "attendances/card_attendance", attendance: attendance %>
      <% end %>
    <% end %>

    <%# Cards with stats %>
    <div class="runs-stats">
      <div class="stats-card">
      </div>
    </div>

    <%# Button create new run %>
    <div class="new-run-dashboard d-flex">
      <p>Create more runs!</p>
      <%= link_to "+", new_run_path %>
    </div>
  </div>
</div>
