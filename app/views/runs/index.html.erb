  <ul class="nav nav-pills justify-content-around mb-2" id="myTab">
    <li class="nav-item">
      <button class="nav-link active fs-3" id="list-tab" data-bs-toggle="tab" data-bs-target="#list" type="button"><i class="fa-solid fa-list"></i></button>
    </li>
    <li class="nav-item">
      <button class="nav-link fs-3" id="map-tab" data-bs-toggle="tab" data-bs-target="#map" type="button"><i class="fa-solid fa-map-location-dot"></i></button>
    </li>
  </ul>

  <div class="tab-content" id="myTabContent">
  <%# Lists of cards %>
    <div class="tab-pane fade show active" id="list">
        <% @runs.each do |run| %>
         <%= render "card_run", run: run %>
        <% end %>
    </div>
    <div class="tab-pane fade" id="map">
      <div style="width: 100%; height: 400px;"
      data-controller="map"
      data-map-markers-value="<%= @markers.to_json %>"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
      </div>
    </div>
  </div>
</div>
