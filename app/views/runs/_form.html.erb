<%= simple_form_for run do |f| %>
  <%= f.input :name, placeholder: "Enter a name for your run", label: false %>
  <%= f.input :description, placeholder: "Write a short description", label: false %>
  <%= f.input :category, as: :select, collection: Run::CATEGORIES, prompt: "Choose the category:", label: false %>
  <%= f.input :level, as: :select, collection: 1..5, prompt: "What is the difficulty of the run?", label: false %>
  <%= f.input :distance, placeholder: "How many km will you run?", label: false %>
  <%= f.input :date, as: :date, label: "When is the run?" %>
  <%= f.input :max_person, placeholder: "How many people can join?", label: false %>
  <%= f.input :meeting_point, placeholder: "Where are you all meeting?", label: false %>
  <%= f.submit class: "btn btn-outline-primary" %>
<% end %>
