<% if message.attendance.user == current_user %>
  <div class="chat-box-right">
    <small><span><%= message.created_at.strftime("%b %e, %l:%M %p") %></span></small>
    <div id="message-<%= message.id %>" class="chat-right">
      @<strong><%= message.user.username %></strong>: <%= message.content %>
    </div>
  </div>
<% else %>
  <div class="chat-box-left">
    <small><span><%= message.created_at.strftime("%b %e, %l:%M %p") %></span></small>
    <div id="message-<%= message.id %>" class="chat-left">
      @<strong><%= message.user.username %></strong>: <%= message.content %>
    </div>
  </div>
<% end %>
