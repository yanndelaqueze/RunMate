<div class="card-attendance-request">
      <div class="">
      <div class="title d-flex justify-content-between align-items-center">
        <h4 class="mt-3"><%= attendance.run.name %> <h4>
        <% if attendance.user == current_user %>
            <%= link_to ('<i class="fa-regular fa-trash-can"></i>').html_safe, attendance_path(attendance), class: 'text-danger fs-4 p-2', data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
          <% end %>
      </div>
        <p class="category">Date : <%= attendance.run.date %> </p>
      </div>
      <div class="mb-2">
        <p>Runner : <%= attendance.user.username %></p>
        <p>Status : <%= attendance.status %></p>
      <% if attendance.run.user == current_user %>
        <div class="d-flex ps-4">
          <%= link_to ('<i class="fa-solid fa-thumbs-down"></i>').html_safe, decline_attendance_path(attendance), class: 'text-danger fs-4 p-2', data: { turbo_method: :patch } %>
          <% if attendance.status != "confirmed" %>
            <%= link_to ('<i class="fa-solid fa-thumbs-up"></i>').html_safe, confirm_attendance_path(attendance), class: 'text-success fs-4 p-2', data: { turbo_method: :patch } %>
          <% end %>
        </div>
      <% end %>
</div>
