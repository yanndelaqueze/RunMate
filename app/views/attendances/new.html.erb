<div class="container my-4">
  <div class="row justify-content-center">
    <div class="col-xs-12 col-sm-4">
      <%= link_to :back, class:"text-decoration-none" do %>
        <span class="btn-back fs-6"><i class="fa-solid fa-circle-arrow-left fs-6 btn-back-blue me-1"></i>BACK</span>
      <% end %>
    <div class="form-box mt-3">
        <h1 class="devise-title">You want to join this run?</h1>
        <%= simple_form_for [@run, @attendance] do |f| %>
          <%= f.input :content, placeholder: "Your message...", label: "Send a quick message to the organizer !", label_html: { class: "my-3"} %>
          <div class="d-flex justify-content-center">
            <%= f.submit "Ask to join", class: "btn btn-outline-primary mt-3" %>
          </div>
        <% end %>
    </div>
    </div>
  </div>
</div>
